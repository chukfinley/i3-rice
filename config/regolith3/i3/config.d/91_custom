# Focus follows mouse
focus_follows_mouse yes

# Move/resize windows with Super + mouse
# Left mouse = move, Right mouse = resize
floating_modifier $mod
tiling_drag modifier

# Dynamically assign workspaces to monitors on startup and monitor changes
exec --no-startup-id ~/.local/bin/i3-assign-workspaces
exec --no-startup-id ~/.local/bin/i3-monitor-daemon

# Autostart
exec --no-startup-id /usr/bin/dunst
exec --no-startup-id /usr/bin/signal-desktop --start-in-tray
exec --no-startup-id redshift

# Custom Keybindings

# Super+Shift+Space to toggle floating mode
bindsym $mod+Shift+space floating toggle

# Super+Shift+V for Tailscale/VPN menu
bindsym $mod+Shift+v exec --no-startup-id ~/.local/bin/tailscale-menu

# Super+R for Fluistern (Voice Input)
bindsym $mod+r exec --no-startup-id /home/user/.local/bin/fluistern

# Super+Shift+D for Vicinae
bindsym $mod+Shift+d exec --no-startup-id /home/user/.local/bin/vicinae open

# Workspace-Switching per Monitor (Super+1-9)
bindsym $mod+1 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor switch 1
bindsym $mod+2 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor switch 2
bindsym $mod+3 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor switch 3
bindsym $mod+4 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor switch 4
bindsym $mod+5 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor switch 5
bindsym $mod+6 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor switch 6
bindsym $mod+7 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor switch 7
bindsym $mod+8 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor switch 8
bindsym $mod+9 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor switch 9

# Move Window to Workspace per Monitor (Super+Shift+1-9)
bindsym $mod+Shift+1 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor move 1
bindsym $mod+Shift+2 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor move 2
bindsym $mod+Shift+3 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor move 3
bindsym $mod+Shift+4 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor move 4
bindsym $mod+Shift+5 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor move 5
bindsym $mod+Shift+6 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor move 6
bindsym $mod+Shift+7 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor move 7
bindsym $mod+Shift+8 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor move 8
bindsym $mod+Shift+9 exec --no-startup-id /home/user/.local/bin/i3-workspace-per-monitor move 9
