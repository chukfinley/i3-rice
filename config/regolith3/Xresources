! Regolith 3 - Custom Configuration

! Alacritty as default terminal
wm.program.terminal: /usr/local/bin/alacritty

! Resize Mode on Super+= (Super+R is for Fluistern)
wm.binding.resize_mode: equal

! Caja as File Manager
wm.program.files: /usr/bin/caja --new-window
!regolith.look.path: /usr/share/regolith-look/default
regolith.look.path: /usr/share/regolith-look/nord

! Close Window on Super+Q
wm.binding.exit_app: q

! Wallpaper
regolith.wallpaper.file: /home/user/pic/wal/wallhaven-4x95v4.jpg
regolith.wallpaper.options: zoom

! Lock Screen on Super+W (uses slock via wrapper)
wm.binding.lock: w
wm.program.lock: ~/.local/bin/i3-lock-wrapper
wm.binding.wifi: Shift+w

! Disable Shift+Space launcher (we use it for floating toggle)
wm.binding.launcher.cmd: Shift+F12

! Disable standard workspace keys (replaced by per-monitor script)
wm.workspace.01.key: F13
wm.workspace.02.key: F14
wm.workspace.03.key: F15
wm.workspace.04.key: F16
wm.workspace.05.key: F17
wm.workspace.06.key: F18
wm.workspace.07.key: F19
wm.workspace.08.key: F20
wm.workspace.09.key: F21
wm.workspace.10.key: F22

! Plain workspace names (no colored icons)
wm.workspace.01.name: 1
